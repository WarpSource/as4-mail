<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:ns1="http://outbox.laurentius.si/payload" targetNamespace="http://outbox.laurentius.si/payload" elementFormDefault="qualified" attributeFormDefault="unqualified">
    <xs:element name="OutPayload">
        <xs:annotation>
            <xs:documentation>MSH vsebine</xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element name="OutPart" type="ns1:OutPart" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:complexType name="OutPart">
        <xs:annotation>
            <xs:documentation>MSH priponka/vsebina</xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="Property" minOccurs="0" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:simpleContent>
                        <xs:extension base="xs:string">
                            <xs:attribute name="id" type="xs:integer" use="optional"/>
                            <xs:attribute name="name" use="required">
                                <xs:annotation>
                                    <xs:documentation xml:lang="sl">Naziv lastnosti </xs:documentation>
                                </xs:annotation>
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:minLength value="1"/>
                                        <xs:maxLength value="128"/>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:attribute>
                            <xs:attribute name="type" >
                                <xs:annotation>
                                    <xs:documentation xml:lang="sl">Property namespace type</xs:documentation>
                                </xs:annotation>
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:minLength value="1"/>
                                        <xs:maxLength value="256"/>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:attribute>
                        </xs:extension>
                    </xs:simpleContent>
                </xs:complexType>
            </xs:element>
            <xs:element name="Bin" type="xs:base64Binary" minOccurs="0"/>
        </xs:sequence>
        <xs:attribute name="id" type="xs:integer" use="optional">
            <xs:annotation>
                <xs:documentation xml:lang="sl">Enolična oznaka pošiljke SED. Številko določa bazna sekvenca ob zapisu v bazo</xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="name" use="optional">
            <xs:annotation>
                <xs:documentation xml:lang="sl">Naziv priponke </xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:maxLength value="128"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="description" use="optional">
            <xs:annotation>
                <xs:documentation xml:lang="sl">Opis priponke</xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:maxLength value="512"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="type" use="optional">
            <xs:annotation>
                <xs:documentation xml:lang="sl">Pošiljateljeva oznaka tipa priponke (racun, vloga,  RC01, itd.) </xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:maxLength value="64"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="filename" use="optional">
            <xs:annotation>
                <xs:documentation xml:lang="sl">ime datoteke: test.pdf, racun.xml, vabilo.doc, ... </xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:maxLength value="128"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="mimeType" use="required">
            <xs:annotation>
                <xs:documentation xml:lang="sl">Mimetip priponke: plain/text, application/pdf, plain/xml, itd..  </xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:token">
                    <xs:maxLength value="128"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="encoding" use="required">
            <xs:annotation>
                <xs:documentation xml:lang="sl">kodiranje priponke oz kodna stran: UTF-8, CP1252-2 itd..  </xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:token">
                    <xs:maxLength value="128"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="sha256Value">
            <xs:annotation>
                <xs:documentation xml:lang="sl">Zgostitvena vrednost priponke</xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:token">
                    <xs:maxLength value="256"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="size" type="xs:integer">                
            <xs:annotation>
                <xs:documentation xml:lang="sl">velikost priponke</xs:documentation>
            </xs:annotation>			
        </xs:attribute>
        <xs:attribute name="filepath">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:maxLength value="1024"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="source" default="mail">
            <xs:annotation>
                <xs:documentation>Source of payload: 
                    - "mail" is orignial payload received or submitted;
                    - "soap" delivery dependand part (hader, AS4 reciept etc))
                    - "[plugin]" generated by plugin                                    
                </xs:documentation>
            </xs:annotation>
            <xs:simpleType>
                <xs:restriction base="xs:token">
                    <xs:maxLength value="32"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="IsSent" type="xs:boolean" default="true">
            <xs:annotation>
                <xs:documentation>part was sent to receiver. For outgoing mail some payload part are not sent (plugin generated part's, sources for ecrypted part etc.. )</xs:documentation>
            </xs:annotation>          
        </xs:attribute>
        <xs:attribute name="IsReceived" type="xs:boolean" default="false">
            <xs:annotation>
                <xs:documentation>part was received. For incomming payload parts, part can be generated from received part. For outgoing mail receiverd part is 
                    AS4 Recipet, error etc.
                </xs:documentation>
            </xs:annotation>          
        </xs:attribute>
        <xs:attribute name="generatedFromPartId" type="xs:integer" >
            <xs:annotation>
                <xs:documentation>Part was generated from refereced part Id. If part was generated from more than one part (concenated pdf), reference must be null 
                </xs:documentation>
            </xs:annotation>          
        </xs:attribute>
        
    </xs:complexType>
</xs:schema>
